<div class="col-sm-2 col-md-3 col-lg-3">
	<div class="jumbotron">
		<br />
		<ul class="nav nav-pills nav-stacked">
	  		<li class="active"><a href="#" onclick="betsView()">Apuestas Vigentes</a></li>
	 		<li><a href="#" onclick="endBetsView()">Apuestas Finalizadas</a></li>
	 		<li><a href="#" onclick="challengeView()"><span id="pending" class="badge pull-right"></span>Desafios Pendientes</a></li>
	 		<li><a href="#" onclick="chlgPendingView()"><span id="requests" class="badge pull-right"></span>Solicitud de Desafios</a></li>
	 	</ul>
	</div>
</div>
<div class="col-sm-8 col-md-6 col-lg-6">
  <div class="jumbotron">
    <h2>Apuestas Vigentes</h2><br/>
    <div id="error"></div>
    <div class="container2">
			
			<div class="panel-group" id="accordion">
			  <% for(i=0;i<this.length;i++){%>
			  <div class="panel panel-info">
			    <div class="panel-heading">
			      <div style="cursor:pointer" class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#<%=this[i].event_id%>">
			        <div class="row">
                    	<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    	<%if(this[i].event_type != 'N'){%>
			        		<img src="<%=this[i].url1%>"/>
			        	<%}%>
                    	<%=this[i].event_d%>
                    	<%if(this[i].event_type != 'N'){%>
			        		<img src="<%=this[i].url2%>"/>
			        	<%}%>
                    	</div>
                    	<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    		<%=this[i].off_dttm%>               		
                    	</div>
                    </div>
			        
			      </div>
			    </div>
			    <div id="<%=this[i].event_id%>" class="panel-collapse collapse">
			      <div class="panel-body">
			        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
						<div class="row"><strong>Categoria:</strong></div>
						<div class="row"><strong>Subcategoria:</strong></div>
			        	<div class="row"><strong>Elecci&oacute;n:</strong></div>
			        	<div class="row"><strong>Apuesta:</strong></div>
			        	<div class="row"><strong>Paga:</strong></div>
			        	<%if(this[i].name != null && this[i].surname!=null){%>
			        		<div class="row"><strong>Desafio:</strong></div>
			        	<%}%>
			        	<div class="row"><strong>Fecha:</strong></div>
			        	
			        </div>
			        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<div class="row"><%=this[i].cat_descr%></div>
						<div class="row"><%=this[i].subcat_descr%></div>
			        	<div class="row"><%=this[i].selection%></div>
			        	<div class="row"><%=this[i].amount%> cr.</div>
			        	<%if(this[i].name!=null && this[i].surname!=null){%>
			        		<div class="row">x 2.00</div>
			        	<%}else{%>
			        		<div class="row">x <%=this[i].odds%></div>
			        	<%}%>
			        	<%if(this[i].name!=null && this[i].surname!=null){%>
			        		<div class="row"><%=this[i].name%> <%=this[i].surname%></div>
			        	<%}%>
			        	<div class="row"><%=this[i].bet_dttm%></div>
			        </div>
					<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></div>
			        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
			        	<div class="row">
			        		<font style="cursor:pointer" color="red">
                    			<i onclick="cancelBet('<%=this[i].event_id%>')" title="Retirar Apuesta" class="fa fa-times fa-lg pull-right"></i>
                    		</font>                    			
                    		<font style="cursor:pointer" color="blue">
                    			<i onclick="editBet('<%=this[i].event_id%>')" title="Modificar Apuesta" class="fa fa-pencil fa-lg pull-right"></i>
                    		</font>
                    		
                    	</div>
			        </div>
			      </div>
			    </div>
			  </div>
			  <%}%>
			  
			</div>   			
			</div>
        
  </div>
</div>

              
      
      
      
      
        
 